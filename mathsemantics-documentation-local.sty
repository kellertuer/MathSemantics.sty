% Define a command which displays colors
\NewDocumentCommand\colorExample{v}{%
  \faIcon{tint}%
  \hspace{.25cm}
  \makebox[.3\textwidth][l]{\textcolor{#1}{#1}}%
  \hspace{.5cm}%
  \colorbox{#1}{\textcolor{white}{\faIcon{fill}}\hspace{.25cm}#1\hspace{.25cm}}%
}

